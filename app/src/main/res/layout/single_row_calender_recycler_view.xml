<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:id="@+id/calender_single_parent_layout"
    android:layout_height="58dp">


    <RelativeLayout
        android:id="@+id/date_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/week_day"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="MON"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="22"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_below="@+id/week_day"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_calender"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp">


        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:text="System Design"
            android:textStyle="bold"
            android:letterSpacing="0.001"
            android:layout_marginStart="10dp"
            android:textColor="#2196F3"
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
        </TextView>


        <TextView
            android:id="@+id/class_time"
            android:layout_below="@+id/class_name"
            android:layout_width="wrap_content"
            android:text="9 - 10 AM"
            android:letterSpacing="0.001"
            android:layout_marginStart="10dp"
            android:textColor="#2196F3"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
        </TextView>


    </RelativeLayout>

</RelativeLayout>