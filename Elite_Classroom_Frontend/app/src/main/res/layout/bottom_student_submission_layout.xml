<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="100dp"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_assignment_submission_background"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_up"
        android:layout_height="wrap_content">
    </ImageView>


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/your_work_text"
        android:text="Your work"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_below="@id/arrow_image"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
    </TextView>



    <RelativeLayout
        android:id="@+id/attachement_layout_second"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_below="@id/your_work_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/attachement_background">

        <ImageView
            android:id="@+id/file_symbol_second"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="20dp"></ImageView>

        <TextView
            android:id="@+id/file_name_second"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:text="dofsdjfosjo"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/attachemnt_button"
        android:layout_below="@id/attachement_layout_second"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/attachement_button_background"
        android:textColor="#0E0FB8"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="Add attachment"
        android:drawableStart="@drawable/add_symbol"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/add_symbol"
        android:paddingLeft="20dp">

    </TextView>

    <TextView
        android:id="@+id/submit_button"
        android:layout_below="@id/attachemnt_button"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="#0E0FB8"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="Submit"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp">

    </TextView>
    <TextView

        android:id="@+id/resubmit_button"
        android:layout_below="@id/attachemnt_button"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="#0E0FB8"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:paddingStart="20dp"
        android:text="ReSubmit"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp">

    </TextView>



</RelativeLayout>